@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-3xl font-bold underline text-blue-600 mb-4">Welcome</h1>
    <p class="text-lg text-gray-700 mb-8">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-blue-500 hover:text-blue-700 underline">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Preline UI Components Test -->
<div class="max-w-4xl mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Button Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Buttons</h2>
            <div class="space-y-3">
                <button type="button" class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
                    Primary Button
                </button>
                <button type="button" class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none">
                    Secondary Button
                </button>
            </div>
        </div>

        <!-- Alert Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Alerts</h2>
            <div class="space-y-3">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="flex-shrink-0 size-4 mt-0.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="m9 12 2 2 4-4"/>
                            </svg>
                        </div>
                        <div class="ms-3">
                            <p class="text-sm font-medium">
                                A simple info alert with an icon.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Cards</h2>
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                <h3 class="text-lg font-medium text-gray-800">Card Title</h3>
                <p class="mt-2 text-gray-600">This is a sample card component using Preline UI styles.</p>
            </div>
        </div>

        <!-- Badge Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Badges</h2>
            <div class="flex flex-wrap gap-2">
                <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Blue Badge
                </span>
                <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Green Badge
                </span>
                <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Red Badge
                </span>
            </div>
        </div>

        <!-- Modal Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Modal</h2>
            <div class="space-y-3">
                <button type="button" class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#hs-modal">
                    Open Modal
                </button>
                <button type="button" class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none" data-hs-overlay="#hs-modal-scale">
                    Scale Animation Modal
                </button>
            </div>
        </div>

        <!-- Dropdown Component -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Preline UI Dropdown</h2>
            <div class="space-y-3">
                <div class="hs-dropdown [--auto-close:inside] relative inline-flex">
